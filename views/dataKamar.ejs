<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Kamar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav>
        <ul class="nav nav-tabs" style="background-color: rgb(36, 36, 200);">
            <li class="nav-item">
                <a class="nav-link" href="/indexAdmin" style="color: white;">Data Customer</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/jenisKamar" style="color: white;">Tambah Jenis Kamar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/dataKamar" style="color: white;">Daftar Kamar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logoutAdmin" style="color: white;">Logout</a>
            </li>
        </ul>
    </nav>

    <h2 style="text-align: center; padding-top: 20px;">Daftar Kamar</h2>
    <div class="container mt-4">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle w-100">
                <thead class="table-primary text-center">
                    <tr>
                        <th style="width: 10%;">ID Kamar</th>
                        <th style="width: 20%;">Nama Kamar</th>
                        <th style="width: 20%;">Harga Kamar</th>
                        <th style="width: 20%;">Deskripsi Kamar</th>
                        <th style="width: 10%;">Aksi</th>
                    </tr>
                </thead>
                <tbody id="roomList">
                    <% room.forEach((dataKamar, i) => { %>
                    <tr>
                        <td class="text-center"><%= dataKamar.id %></td>
                        <td class="text-center"><%= dataKamar.nama_kamar %></td>
                        <td class="text-center"><%= dataKamar.harga_kamar %></td>
                        <td class="text-center"><%= dataKamar.deskripsi_kamar %></td>
                        <td class="text-center">
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-success w-60 editBtn" data-id="<%= dataKamar.id %>">Edit</button>
                                <button type="button" class="btn btn-danger deleteBtn" data-id="<%= dataKamar.id %>">Hapus</button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>                
            </table>
            <% if (room.length === 0) { %>
            <div class="alert alert-warning text-center" role="alert">Belum ada Data Kamar</div>
            <% } %>
        </div>
    </div>

    <!-- Modal Konfirmasi Hapus -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel">Konfirmasi Hapus</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Apakah Anda yakin ingin menghapus kamar ini?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Hapus Pesanan</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    let selectedKamarId = null;

    document.querySelectorAll(".deleteBtn").forEach((btn) => {
        btn.addEventListener("click", function () {
            selectedKamarId = this.getAttribute("data-id");
            const modal = new bootstrap.Modal(document.getElementById("confirmDeleteModal"));
            modal.show();
        });
    });

    document.getElementById("confirmDeleteBtn").addEventListener("click", function () {
        if (selectedKamarId) {
            fetch(`/dataKamar/${selectedKamarId}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json",
                    "Cache-Control": "no-cache",
                },
            })
                .then((response) => {
                    if (response.ok) {
                        const modal = bootstrap.Modal.getInstance(document.getElementById("confirmDeleteModal"));
                        modal.hide();
                        location.reload(); // Reload halaman setelah penghapusan
                    } else {
                        return response.text().then((text) => {
                            throw new Error(text);
                        });
                    }
                })
                .catch((error) => {
                    console.error("Error deleting room:", error);
                    alert("Terjadi kesalahan saat menghapus data.");
                });
        }
    });
});
    </script>
</body>
</html>
