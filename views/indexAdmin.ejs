<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    />
    <style>
    /* Custom CSS untuk memperbaiki tampilan tabel */
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
        padding: 8px; /* Kurangi padding agar tidak terlalu besar */
    }
    
    .table th {
        background-color: #007bff;
        color: white;
        padding: 10px; /* Menambahkan sedikit padding untuk header agar lebih proporsional */
    }
    
    .table-striped tbody tr:nth-child(odd) {
        background-color: #f2f2f2;
    }
    
    .table-hover tbody tr:hover {
        background-color: #e6f7ff;
    }
    
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        border-radius: 12px 12px 0 0;
    }
    
    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }
    
    .btn-group .btn {
        width: 45%;
    }
    
    /* Menambah jarak antara tabel dan elemen lain */
    .table-responsive {
        margin-top: 20px;  /* Menambahkan margin atas */
        margin-bottom: 20px; /* Menambahkan margin bawah */
    }
    /* Mengatur ukuran dan jarak tabel lebih proporsional */
    table {
        margin: 0 auto; /* Menjaga tabel tetap terpusat */
        width: 100%; /* Tabel memenuhi lebar container */
    }
    </style>
</head>
<body>
    <ul class="nav nav-tabs" style="background-color: rgb(36, 36, 200);">
        <li class="nav-item">
            <a class="nav-link" href="/indexAdmin" style="color: white;">Data Customer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/jenisKamar" style="color: white;">Tambah Jenis Kamar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/dataKamar" style="color: white;">Daftar Kamar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/logoutAdmin" style="color: white;">Logout</a>
        </li>
    </ul>

    <div class="card shadow-lg mb-4 mt-5 mx-auto" style="max-width: 76%;">
        <div class="card-header bg-primary text-white text-center">
            <h4>Selamat Datang Di Admin Page</h4>
        </div>
        <div class="card-body">
            <p class="text-center" id="username-display" style="font-weight: bold; color: green"></p>
            <h4 class="text-center" style="color: green;">Welcome, <%= username %>!</h4>
        </div>
    </div>

    <div class="container mt-4">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped align-middle w-100">
                <thead class="table-primary text-center">
                    <tr>
                        <th style="width: 10%;">ID Booking</th>
                        <th style="width: 20%;">Nama Customer</th>
                        <th style="width: 10%;">Email</th>
                        <th style="width: 10%;">No. Telepon</th>
                        <th style="width: 10%;">Kamar</th>
                        <th style="width: 10%;">Check-in</th>
                        <th style="width: 10%;">Check-out</th>
                        <th style="width: 10%;">Harga</th>
                        <th style="width: 10%;">Username</th>
                        <th style="width: 10%;">Aksi</th>
                    </tr>
                </thead>
                <tbody id="customerList">
                    <% customer.forEach((indexAdmin, i) => { %>
                    <tr>
                        <td class="text-center"><%= indexAdmin.id %></td>
                        <td class="text-center"><%= indexAdmin.nama %></td>
                        <td class="text-center"><%= indexAdmin.email %></td>
                        <td class="text-center"><%= indexAdmin.phone_number %></td>
                        <td class="text-center"><%= indexAdmin.jenis_room %></td>
                        <td class="text-center date-cell"><%= indexAdmin.check_in_date %></td>
                        <td class="text-center date-cell"><%= indexAdmin.check_out_date %></td>
                        <td class="text-center"><%= indexAdmin.harga %></td>
                        <td class="text-center"><%= indexAdmin.username %></td>
                        <td class="text-center">
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-success w-60 editBtn" data-id="<%= indexAdmin.id %>">Edit</button>
                                <button class="btn btn-sm btn-danger w-60 deleteBtn" data-id="<%= indexAdmin.id %>">Cancel</button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>                
            </table>
            <% if (customer.length === 0) { %>
            <div class="alert alert-warning text-center" role="alert">Belum ada Data Pesanan</div>
            <% } %>
        </div>
    </div>

    <!-- Modal Konfirmasi Hapus -->
    <div id="confirmDeleteModal" class="modal fade" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Konfirmasi Penghapusan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Apakah Anda yakin ingin menghapus pesanan ini?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tidak</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Hapus Pesanan</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Format tanggal di dalam tabel
            document.querySelectorAll(".date-cell").forEach((cell) => {
                const originalDate = cell.textContent.trim();
                if (originalDate) {
                    const formattedDate = formatDate(originalDate);
                    cell.textContent = formattedDate;
                }
            });

            let selectedCustomerId = null;

            // Ketika tombol Cancel ditekan
            document.querySelectorAll(".deleteBtn").forEach((btn) => {
                btn.addEventListener("click", function () {
                    selectedCustomerId = this.getAttribute("data-id");
                    const modal = new bootstrap.Modal(document.getElementById("confirmDeleteModal"));
                    modal.show();
                });
            });

            // Konfirmasi Hapus di Modal
            document.getElementById("confirmDeleteBtn").addEventListener("click", function () {
                if (selectedCustomerId) {
                    fetch(`/indexAdmin/${selectedCustomerId}`, {
                        method: "DELETE",
                    })
                        .then((response) => {
                            if (response.ok) {
                                const modal = bootstrap.Modal.getInstance(document.getElementById("confirmDeleteModal"));
                                modal.hide();
                                location.reload();
                            } else {
                                return response.text().then((text) => {
                                    throw new Error(text);
                                });
                            }
                        })
                        .catch((error) => {
                            console.error("Error deleting customer:", error);
                            alert("Terjadi kesalahan saat menghapus data.");
                        });
                }
            });
        });
        function formatDate(date) {
            const months = [
                "Januari",
                "Februari",
                "Maret",
                "April",
                "Mei",
                "Juni",
                "Juli",
                "Agustus",
                "September",
                "Oktober",
                "November",
                "Desember",
            ];
            const d = new Date(date);
            const day = d.getDate().toString().padStart(2, "0");
            const month = months[d.getMonth()];
            const year = d.getFullYear();
            return `${day} ${month} ${year}`;
        }
    </script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
    ></script>
</body>
</html>
