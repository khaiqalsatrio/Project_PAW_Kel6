<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    />
</head>
<body>
    <ul class="nav nav-tabs" style="background-color: rgb(36, 36, 200);">
        <li class="nav-item">
            <a class="nav-link" href="#" style="color: white;">Data Customer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" style="color: white;">Tambah Jenis Kamar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/logoutAdmin" style="color: white;">Logout</a>
        </li>
    </ul>

    <div class="card shadow-lg mb-4 mt-5 mx-auto" style="max-width: 68%;">
        <div class="card-header bg-primary text-white text-center">
            <h4>Halaman Admin Hotel Murah</h4>
        </div>
        <div class="card-body">
            <p class="text-center" id="username-display" style="font-weight: bold; color: green"></p>
            <h3 class="text-center">Welcome, <%= username %>!</h3>
        </div>
    </div>

    <div class="container mt-4">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>No</th>
                        <th>Nama Customer</th>
                        <th>Email</th>
                        <th>No. Telepon</th>
                        <th>Tanggal Check-in</th>
                        <th>Tanggal Check-out</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody id="customerList">
                    <% customer.forEach((indexAdmin, i) => { %>
                    <tr>
                        <td><%= indexAdmin.nama %></td>
                        <td><%= indexAdmin.email %></td>
                        <td><%= indexAdmin.phone_number %></td>
                        <td><%= indexAdmin.jenis_room%></td>
                        <td><%= indexAdmin.check_in_date %></td>
                        <td><%= indexAdmin.check_out_date %></td>
                        <td><%= indexAdmin.harga%></td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <button class="btn btn-sm btn-success editBtn w-100" data-id="<%= indexAdmin.id %>">Edit</button>
                                <button class="btn btn-sm btn-danger deleteBtn w-100" data-id="<%= indexAdmin.id %>">Cancel</button>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <% if (customer.length === 0) { %>
        <div class="alert alert-warning text-center" role="alert">Belum ada Data</div>
        <% } %>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var navbar = document.getElementById("mainNavbar");
            var currentPage = window.location.pathname;
            if (currentPage.includes("/admin/index") && navbar) {
                navbar.style.display = "none";
            }
        });
    </script>

    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
    ></script>
</body>
</html>
