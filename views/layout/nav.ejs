<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hotel Murah - Navbar</title>
    <!-- Include Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      /* Navbar item hover and active effects */
      .nav-link {
        transition: transform 0.3s ease, color 0.3s ease;
      }

      .nav-link:hover {
        transform: translateY(-3px);
        color: whitesmoke !important; /* Change color on hover */
      }

      .nav-link.active {
        color: whitesmoke !important; /* Highlight active tab */
        font-weight: bold;
      }

      /* Navbar branding hover effect */
      .navbar-brand {
        font-weight: bold;
        transition: color 0.3s ease;
      }

      .navbar-brand:hover {
        color: whitesmoke !important;
      }

      /* Navbar toggle button effect */
      .navbar-toggler {
        transition: transform 0.3s ease;
      }

      .navbar-toggler:hover {
        transform: scale(1.1);
      }

      /* Style for disabled links */
      .disabled-link {
        pointer-events: none; /* Disable click events */
        opacity: 0.6; /* Reduce visibility to indicate disabled state */
        color: gray !important; /* Optional: change the text color */
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">OYO</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
          id="navbar-toggler"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/booking">Booking Sekarang</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dataCustomer-view">Pesanan Saya</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#logoutModal"
                >Logout</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Modal -->
    <div
      class="modal fade"
      id="logoutModal"
      tabindex="-1"
      aria-labelledby="logoutModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="logoutModalLabel">Konfirmasi Logout</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">Apakah Anda yakin ingin keluar?</div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Batal
            </button>
            <a href="/logout" type="button" class="btn btn-primary">OK</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script>
      // Highlight the active navbar item and disable navbar on specific pages
      window.addEventListener("DOMContentLoaded", function () {
        var navbarLinks = document.querySelectorAll(".navbar-nav .nav-link");
        var navbar = document.querySelector(".navbar"); // Menangkap elemen navbar
        var currentPage = window.location.pathname;

        // Highlight the active navbar item
        navbarLinks.forEach(function (link) {
          // If the href of the link matches the current page
          if (link.getAttribute("href") === currentPage) {
            link.classList.add("active");
          } else {
            link.classList.remove("active");
          }
        });

        // Disable navbar links if on login or register page
        var disabledPages = ["/login", "/register"];
        if (disabledPages.includes(currentPage)) {
          navbarLinks.forEach(function (link) {
            link.classList.add("disabled-link"); // Tambahkan kelas untuk menonaktifkan tautan
          });
        }

        // Sembunyikan navbar pada halaman tertentu
        var hiddenPages = ["/loginAdmin", "/registerAdmin", "/indexAdmin"];
        if (hiddenPages.includes(currentPage)) {
          navbar.style.display = "none"; // Sembunyikan navbar jika halaman adalah indexAdmin
        }
      });
    </script>
  </body>
</html>
