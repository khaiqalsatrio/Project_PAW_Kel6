<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - Booking Hotel</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #f8f9fa;
        margin: 0;
      }
      main {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }
      .login-card {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        background-color: silver;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .login-card img {
        width: 100px;
        height: 100px;
        object-fit: cover;
      }
      .login-card .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }
      .login-card .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
      }
      .login-card .form-control {
        margin-bottom: 10px;
      }
      .login-card p {
        font-size: 14px;
      }
      footer {
        background-color: rgb(35, 33, 33);
        color: white;
        text-align: center;
        padding: 10px 0;
      }
      .input-group-text {
        background-color: #fff;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="login-card">
        <h3 class="text-center mb-4">Login Form</h3>
        <form id="loginForm" action="/login" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">
              <i class="bi bi-person-fill"></i> Masukan Username
            </label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Masukkan Username" required />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">
              <i class="bi bi-lock-fill"></i> Masukan Password
            </label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Masukkan Password" required />
          </div>
          <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
            <label for="rememberMe" class="form-check-label">Remember Me</label>
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-block w-100">Masuk</button>
          </div>
        </form>
        <p class="text-center mt-3">Belum punya akun?<a href="/register" class="text-primary">Daftar di sini</a>.<br /></p>
      </div>
    </main>
    <footer>
      <p class="mb-0">&copy; 2024 Hotel murah. All rights reserved.</p>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      // Populate form fields if "Remember Me" data exists
      window.onload = function () {
        const savedUsername = localStorage.getItem("username");
        const savedPassword = localStorage.getItem("password");

        if (savedUsername && savedPassword) {
          document.getElementById("username").value = savedUsername;
          document.getElementById("password").value = savedPassword;
          document.getElementById("rememberMe").checked = true;
        }
      };

      // Save or clear "Remember Me" data on form submission
      document.getElementById("loginForm").addEventListener("submit", function (event) {
        const rememberMe = document.getElementById("rememberMe").checked;
        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;

        if (rememberMe) {
          localStorage.setItem("username", username);
          localStorage.setItem("password", password);
        } else {
          localStorage.removeItem("username");
          localStorage.removeItem("password");
        }
      });
    </script>
  </body>
</html>
